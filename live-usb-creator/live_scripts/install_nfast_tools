#!/bin/bash

###############################################################################
# Install NCipher
###############################################################################

# note that we have to do this after livemedia boot, because the install script behaves differently based on whether
# a PCI NShield is plugged in, and we donâ€™t want our ISO build to depend on having a PCI Nshield plugged in

pushd /opt/nfast/driver
./configure
make install
popd

pushd /opt/nfast/sbin
./install
popd

/opt/nfast/bin/config-serverstartup --enable-tcp --enable-privileged-tcp
# restart the hardserver for the changes to take effect
/opt/nfast/sbin/init.d-ncipher restart

/opt/nfast/bin/nopclearfail --clear --all

mkdir -p /hd
mount /dev/sda1 /hd

# Setup symlinks for /opt/nfast/kmdata/local and /data/app/plutus/wallets
mkdir -p /opt/nfast/kmdata/
rm -rf /opt/nfast/kmdata/local/
ln -s /hd/local /opt/nfast/kmdata/local
ln -s /hd/wallets /data/app/plutus/wallets

nohup /opt/nfast/bin/see-stdioesock-serv --machine /data/app/plutus/plutus-signed.sar --userdata-sar /data/app/plutus/plutus-userdata-signed.sar > /hd/plutus-signed.stdout 2> /hd/plutus-signed.stderr &

# warm up the cache
cat /data/app/plutus/plutus-cli.jar > /dev/null
